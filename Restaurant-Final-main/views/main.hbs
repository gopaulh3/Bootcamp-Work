<link rel="stylesheet" href="css/styles.css">
<section id="title">
    <div class="container-fluid">
      <!-- Nav Bar -->
      <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="">Reliverdoo</a>
        <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#recyclerView">Restaurants</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"">Contact</a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Title -->
            <h2><ion-icon class="location-icon" name="location"></ion-icon>London</h2>
            <h1 class="big-heading">Hey!</h1>
            <h2 class="see-other-res">See our other restaurants</h2>
            <a href="http://localhost:3000/restaurants/managing"><button type="button" class="btn btn-outline-dark btn-lg manage-btn">Manage Restaurants</button></a><!--<span>&rarr;</span>-->
    </div>

  </section>


  <!-- Filtering item -->

  <section id="filtering-item">
      <div class="filter-container">
        <div class="row" id="filter-row">
        </div>
      </div>
  </section>

    <!-- RecyclerView -->

    <section id="recyclerView">
        <h2 class="recyclerView-title">Popular</h2>
        <div class="recyclerView-container">
          <div class="row" id="recyclerView-row">
              {{#each restaurants}}
      <div class="col-lg-4 col-md-6 col-sm-12">
        <a href="http://localhost:3000/restaurants/{{this.id}}">  
      <div class="filter-card rcard">
        <div class="rec-img"><img src="{{this.image}}"" alt="{{this.name}}"></div>
        <h2 class="rec-h2">{{this.name}}</h2>
      </div>
      </a>
  </div>
  {{/each}}
          </div>
        </div>
    </section>

      <script src="js/index.js" type="text/javascript"></script>






